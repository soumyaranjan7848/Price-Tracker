
{
  "manifest_version": 3,
  "name": "Price Tracker Extension",
  "description": "Track prices of products on Amazon, Flipkart, and eBay in real time.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "scripting"
    
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
